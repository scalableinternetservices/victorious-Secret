<h1>Search</h1>
<%= form_tag({controller: "search", action: "search"}, method: "post") do %>
<%= label_tag(:query, "Search for:") %>
<%= text_field_tag(:query) %>
<%= submit_tag("Search") %>
<% end %>
<div>
<h1>Search Users</h1>

  <% @search_users.each do |result| %>
      <tr>
	      <td><%= link_to result.first+" " +result.last, {:controller => :welcome, :action => :view_profile, :user_id => result.id } %></td>
      </tr>
  <% end %>
</div>
<div>
  <h1>Search Posts</h1>
  <table>
  <% @search_posts.each do |result| %>
      <tr>
        <td> <%= link_to result.title+" ", result %></td>
        <td> Categories: <%= result.categories %></td>
        <td> Description: <%= result.description %></td>
      </tr>
  <% end %>
  </table>
</div>

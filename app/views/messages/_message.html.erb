<li class="<%=  self_or_other(message) %>">
  <div class="avatar">
  <% if message.user.picture_url.nil? %>
  <%= image_tag(asset_path('default.jpg'), size: "50x50", style: "float:left; margin: 0 5px 0 0" ) %>
  <% else %>
 	<%= image_tag(message.user.picture_url, size: "50x50", class: "col-md-4") %>
  <% end %>
  </div>
  <div class="chatboxmessagecontent">
    <p><%= message.body %></p>
    <time datetime="<%= message.created_at %>" title="<%= message.created_at.strftime("%d %b  %Y at %I:%M%p") %>">
      <%= message_interlocutor(message).first %> â€¢ <%= message.created_at.strftime("%H:%M %p") %>
    </time>
  </div>
</li>
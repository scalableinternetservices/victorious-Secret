<div id="center">
	<h2>These are some of the posts aroung you </h2>
	<% if @count != 0 %>
	<h1> you have <%= pluralize(@count,'bid')  %> new </h1>
	<%end%>
	<%if @won !=0 %>
	<h1> you have won <%=pluralize(@won,'bid')%> </h1>
	<% end %>
</div>

<div id="wrapper">
	<div id="columns">
		<% @posts.each do |post| %>
			
			<div class="pin">
			<%= link_to post_path(post.id) do %>
				<%= render(post)%>
				<% end %>
				<p>there have been <%= pluralize(post.bids.count,'Bid') %></p>
				<% if !(current_user.consumer.posts.include?(post))  %>
				<h2><%= button_to '(bid on this)', new_bid_path(post_id: post) , method: :post%>	</h2>			
				<% end %>
			
			</div>
			
				
		<% end %>
	</div>
</div>

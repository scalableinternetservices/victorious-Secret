


<%= button_to 'Request a service', new_post_path, method: :get %>

<% @posts.each do |post| %>
<div class="container"
<p>
  <strong>Title:</strong>
  <%= post.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= post.description %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag(post.picture_url, size: "50x50", alt: "User hasn't posted a picture") if post.picture.present? %>
</p>

<div class="actions">
<%= link_to 'Edit', edit_post_path(post) %>
</div>
</div>
<% end %>

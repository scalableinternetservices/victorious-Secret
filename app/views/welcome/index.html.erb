<%= button_to 'Request a service', new_post_path, method: :get, class: "pure-button"%>
<div id="wrapper">
	<div id="columns">
		<% @posts.each do |post| %>
			<%= link_to post_path(post.id) do %>
			<div class="pin">
			<%= render(post)%>
			<%= link_to '(bid on this)', new_bid_path(post_id: post) %>
			</div>
			<% end %>
		<% end %>
	</div>
</div>


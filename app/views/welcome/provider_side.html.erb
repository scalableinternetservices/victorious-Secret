<div id="center">
	<h3>You have bid on these items</h3>
</div>
<div id="wrapper">
	<div id="content">
		<ul id="movieposters">
				<% @posts.each do |post| %>		
				<% if ( (@posts_provider_update.include? post) && (post.provider == current_user.provider) )%>
				<li class='newbid' >
				<% else %>
				<li>
				<%end %>
						<%= link_to post_path(post.id) do %>
						<% if (post.picture.present?) %>
							<%= image_tag(post.picture_url, width: "250", height: "250")%>
						<% else %>
							<img src="http://www.endorph.me/assets/images/no-thumb.png" alt="no_image" width="250" height="250">
						<%end%>
				<% end %>
					<div class="movieinfo">
							<%= link_to post_path(post.id) do %>
									<h5><%=post.title%></h5>
									<h5><%= number_to_currency(post.price)%>: <%= pluralize(post.bids.count,'Bid') %></h5>
									<p><i><%= post.categories %></i></p>
							<% end %>
							<% if !(current_user.consumer.posts.include?(post))  %>
								<%= button_to 'BID', new_bid_path(post_id: post) , method: :post, :class => 'btn btn-primary btn-xs'%>			
							<% end %>
							<% if(post.consumer.user == current_user) %>
								<%= button_to 'Edit', edit_post_path(post), method: :get, :class => 'btn btn-primary btn-xs bidbtn' %>
							<% end %>
						</div>

					</li>
				<% end %>
		</ul>
	</div>
</div>
<div id="wrapper">
	<div id="content">
		<ul id="movieposters">
				<% @posts.each do |post| %>		
				<li>
					<%= link_to post_path(post.id), :remote => true, :class => "postmodal_link", "data-toggle" => "modal" do%>
						<% if (post.picture.present?) %>
							<%= image_tag(post.picture_url, width: "250", height: "250")%>
						<% else %>
							<img src="http://www.nichebuilder.com/Shared/PageBuilder/images/empty-image-placeholder.png" alt="no_image" width="250" height="250">
						<%end%>
					<% end %>
					<div class="movieinfo">
							<%= link_to post_path(post.id), :remote => true, :class => "postmodal_link", "data-toggle" => "modal" do%>
									<h4><%=post.title%></h4>
									<h4><%= number_to_currency(post.price)%></h4>
									<h5><%= pluralize(post.bids.count,'Bid')%></h5>
									<!-- <p><i><%= post.categories.to_sentence   if post.categories.to_s.length != 0 %></i></p> -->
							<% end %>
							<% if !(current_user.consumer.posts.include?(post))  %>
								<%= button_to 'BID', new_bid_path(post_id: post) , method: :post, :class => 'btn btn-success btn-xs center-block'%>			
							<% end %>
							<% if(post.consumer.user == current_user) %>
								<%= link_to 'Edit', edit_post_path(post), :class => 'btn btn-success btn-xs bidbtn' %>
							<% end %>
 							
						</div>
					</li>
				<% end %>
		</ul>
	</div>

	<div id="popupthree" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
	    <div class="modal-dialog">
	        <div class="modal-content" id="bidmodal">
	            <div class="modal-header">
	                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	                <h4 class="modal-title"></h4>
	            </div>
	            <div class="modal-body" id="popupthreebody"></div>
	        </div>
	    </div>
	</div>
</div>



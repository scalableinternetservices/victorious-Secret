form.new_bid{
	margin-left: auto;
	marign-right: auto;
	background: #F7F7F7;
	padding: 25px 15px 25px 10px;
	font: 12px Georgia, "Times New Roman", Times, serif;
	color: #888;
	text-shadow: 1px 1px 1px #FFF;
	border: 1px solid #E4E4E4;
	margin-top: 10px;
}

form.new_post{
	margin-left: auto;
	marign-right: auto;
	background: #E4E4E4;
	padding: 25px 15px 25px 10px;
	font: 12px Georgia, "Times New Roman", Times, serif;
	color: #888;
	text-shadow: 1px 1px 1px #FFF;
	border: 1px solid #E4E4E4;
}

form.edit_post {
	font: 16px Georgia, "Times New Roman", Times, serif;
}

form.new_bid label, form.new_post label, form.edit_post label{
	display: block;
	margin: 0px;
}


form.new_bid input[type="submit"], form.new_post input[type="submit"], form.edit_post input[type="submit"]{
	background: #E27575;
	border: none;
	padding: 10px 25px 10px 25px;
	color: #FFF;
	box-shadow: 1px 1px 5px #B6B686;
	border-radius: 3px;
	text-shadow: 1px 1px 1px #9E3F3F;
	cursor: pointer;
}

form.new_bid input[type="submit"]:hover, form.new_post input[type="submit"]:hover, form.edit_post input[type="submit"]:hover{
	background: #CF7A7A;
}

form.new_bid input[type="number"], form.new_bid textarea {
	border: 1px solid #DADADA;
	color: #888;
	height: 30px;
	margin-bottom: 16px;
	margin-right: 6px;
	margin-top: 2px;
	outline: 0 none;
	padding: 3px 3px 3px 5px;
	width: 100%;
	font-size: 12px;
	line-height:15px;
	box-shadow: inset 0px 1px 4px #ECECEC;
}

form.new_post input, form.new_post textarea, form.new_post select{
	width: 250px;
}

form.edit_post input, form.edit_post textarea, form.edit_post select {
	width: 500px;
}

